# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with  defaults from defaults.sls ##}
{% import_yaml 'sysctl/defaults.yaml' as default_settings %}

{## 
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yaml
##}
{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': { },
        'RedHat': { },
  }
  , grain="os_family"
  , merge=salt['pillar.get']('sysctl:lookup'))
%}
{## Merge the flavor_map to the default settings ##}
{% do default_settings.sysctl.update(os_family_map) %}

{## Merge in sysctl:lookup pillar ##}
{% set sysctl = salt['pillar.get'](
        'sysctl',
        default=default_settings.sysctl,
        merge=True
    )
%}
